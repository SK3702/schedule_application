<div class="show_container">

    <div class="show_header">
        <h2><%= @post.title%><h2>
        <%= button_to '編集する', {controller: 'posts', action: 'edit'}, {method: :get, class: "edit_btn btn"} %>
    </div>

    <div class="details_area">
        <table>
            <tr>
                <th>開始日</th>
                <td><%= @post.start_date.to_s(:date_jp) %></td>
            </tr>
            <tr>
                <th>終了日</th>
                <td><%= @post.end_date.to_s(:date_jp) %></td>
            </tr>
            <tr>
                <th>終日</th>
                <% if @post.all_day %>
                        <td>◯</td>
                    <% else %>
                        <td></td>
                    <% end %>
            </tr>
            <tr>
                <th>スケジュールメモ</th>
                <td><%= @post.memo %></td>
            </tr>
        </table>
    </div>
        <%= link_to "一覧に戻る", posts_path%>
    </div>
</div>